<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context="emcorp.studio.petloc.Fragment.AboutFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="ABOUT"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="Locpets merupakan aplikasi pencarian klinik Hewan &amp; Pet Shop, aplikasi ini dibuat untuk mempermudah pengguna dalam memperoleh informasi seputar Klinik &amp; Hewan peliharaan di Kota Bandung."/>
    </LinearLayout>
</FrameLayout>
